<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_venue_in_list_name_root_CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:clickable="false"
        android:duplicateParentState="true"
        android:focusable="false"
        app:columnCount="2"
        app:rowCount="3">

        <TextView
            android:id="@+id/single_venue_in_list_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:duplicateParentState="true"
            android:focusable="false"
            android:gravity="left"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="0" />

        <RatingBar
            android:id="@+id/single_venue_in_list_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:duplicateParentState="true"
            android:focusable="false"
            android:isIndicator="true"
            android:max="10"
            android:numStars="5"
            android:stepSize="0.1"
            android:theme="@style/RatingBar"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/single_venue_in_list_rating_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:duplicateParentState="true"
            android:focusable="false"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="1" />


        <CheckBox
            android:id="@+id/single_venue_in_list_favorite_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:clickable="true"
            android:focusable="true"
            android:text="Favorite"
            android:textColor="@android:color/black"
            app:layout_column="1"
            app:layout_columnWeight="0.5"
            app:layout_gravity="center_horizontal|right"
            app:layout_row="2" />

    </android.support.v7.widget.GridLayout>

</android.support.v7.widget.CardView>