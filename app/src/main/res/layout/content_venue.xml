<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.test.sdg.dsgtestapp.venue.page.view.VenueActivity"
    tools:showIn="@layout/activity_venue">

    <ImageView
        android:id="@+id/VenueActivity_photo_ImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25244617" />

    <android.support.v7.widget.GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:foregroundGravity="top"
        android:padding="4dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline">


        <TextView
            android:id="@+id/VenueActivity_store_name_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="0" />

        <RatingBar
            android:id="@+id/VenueActivity_rating_RatingBar"
            android:layout_width="wrap_content"
            android:theme="@style/RatingBar"
            android:layout_height="wrap_content"
            app:layout_column="0"
            android:isIndicator="true"
            android:focusable="false"
            android:clickable="false"
            android:stepSize="0.1"
            android:numStars="5"
            app:layout_row="1" />

        <TextView
            android:id="@+id/VenueActivity_rating_value_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="1" />

        <TextView
            android:id="@+id/VenueActivity_url_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="URL"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="2" />

        <TextView
            android:id="@+id/VenueActivity_address_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="3" />

        <TextView
            android:id="@+id/VenueActivity_contact_details_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_column="0"
            app:layout_row="4" />

    </android.support.v7.widget.GridLayout>


</android.support.constraint.ConstraintLayout>
